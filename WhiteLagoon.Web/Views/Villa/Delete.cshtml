@model Villa

<div class="w-100 card border-0 p-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center" style="height:50px">
                <h2 class="text-white py-2">Delete Villa</h2>
            </div>
        </div>
    </div>
    <div class="card-body border p-4">
        <form method="post" class="row">
            <input asp-for="Id" hidden />
            <div class="p-3">
                @* <div class="text-warning" asp-validation-summary="ModelOnly"></div> *@
                <div class="form-floating py-2 col-12">
                    <input asp-for="Name" class="form-control border shadow" disabled/>
                    <label asp-for="Name" class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Description" class="form-control border shadow" disabled />
                    <label asp-for="Description" class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Price" class="form-control border shadow" disabled />
                    <label asp-for="Price" class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Sqft" class="form-control border shadow" disabled />
                    <label asp-for="Sqft" class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Occupancy" class="form-control border shadow" disabled />
                    <label asp-for="Occupancy" class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="ImageUrl" class="form-control border shadow" disabled />
                    <label asp-for="ImageUrl" class="ms-2"></label>
                </div>
                <div class="row pt-2 d-flex justify-content-center">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-warning w-100"><i class="bi bi-trash-fill"></i> Delete</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Villa" asp-action="Index" class="btn btn-danger w-100">
                            <i class="bi bi-x-circle"></i> Cancel
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
